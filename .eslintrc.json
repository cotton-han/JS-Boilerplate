{
  "env": {
    "es2021": true,
    "node": true,
    "browser": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "standard"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "curly": ["error", "all"],
    "brace-style": ["error", "1tbs"],
    "import/newline-after-import": ["error", { "count": 1 }],
    "arrow-parens": "error"
  }
}
